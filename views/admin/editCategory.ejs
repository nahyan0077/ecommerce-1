    <!-- category name -->

            <h2 class=" mb-4">Edit Category</h2>
            <p style="color: red; text-align: center;" id="err1" ><%-locals.err?"This category already exist":""-%></p>
            <p style="color: rgb(27, 161, 9); text-align: center;" id="err1" ><%-locals.added?"The category has been added":""-%></p>
            <form id="categoryForm" action="/updatecategory" method="post">
                <div class="form-group">
                    <label for="categoryName">Category Name:</label>
                    <input type="text" class="form-control" id="categoryName" name="categoryName" placeholder="Enter category name" required oninput="validateCategoryName()" value="<%-cat.categoryName-%>">
                    <div id="categoryNameError" class="error-message text-danger"></div>
                </div>
                <input type="hidden" name="id" value="<%-cat._id-%>">
                <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                    <button id="submit" type="submit"  class="btn btn-primary float-right" onclick="validateForm()" disabled>Update Category</button>
                </div>
            </form>


    
    </div>

        <script>
            function validateCategoryName() {
                const categoryNameInput = document.getElementById('categoryName');
                const categoryNameError = document.getElementById('categoryNameError');
                const submitButton = document.getElementById('submit');
    
                // Reset error message
                categoryNameError.textContent = '';
    
                // Check for minimum 2 letters
                if (categoryNameInput.value.length < 2) {
                    categoryNameError.textContent = 'Minimum letters required';
                    submitButton.disabled = true;
                    return;
                }
    
                // Check for spaces
                if (categoryNameInput.value.includes(' ')) {
                    categoryNameError.textContent = 'No spaces allowed';
                    submitButton.disabled = true;
                    return;
                }
    
                // Check for numbers
                if (/\d/.test(categoryNameInput.value)) {
                    categoryNameError.textContent = 'No numbers allowed';
                    submitButton.disabled = true;
                    return;
                }
    
                // If no errors, enable the button
                submitButton.disabled = false;
            }
    
            function validateForm() {
                // You can perform additional form-level validation here
                // If no errors, submit the form (you can add an AJAX call here)
                document.getElementById('categoryForm').submit();
            }
        </script>

