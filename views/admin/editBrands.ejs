        <p style="color: rgb(27, 161, 9); text-align: center;" id="err1"><%- locals.added1 ? "The brand has been added" : "" -%></p>
        <form id="brandForm" action="/updatebrand" method="post">
            <div class="form-group">
                <label for="brandName">Brand Name:</label>
                <input type="text" class="form-control" id="categoryName1" name="brandName" placeholder="Enter brand name" required oninput="validateBrandName()" value="<%-brnd.brandName-%>">
                <div id="categoryNameError1" class="error-message text-danger"></div>
            </div>
            <input type="hidden" name="id" value="<%-brnd._id-%>">
            <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                <button id="submit1" type="submit" class="btn btn-primary float-right" onclick="validateForm()" disabled>Update Brand</button>
            </div>
        </form>

    </div>



<script>
    function validateBrandName() {
        const brandNameInput = document.getElementById('categoryName1');
        const brandNameError = document.getElementById('categoryNameError1');
        const submitButton = document.getElementById('submit1');

        // Reset error message
        brandNameError.textContent = '';

        // Check for minimum 2 letters
        if (brandNameInput.value.length < 2) {
            brandNameError.textContent = 'Minimum 2 letters required';
            submitButton.disabled = true;
            return;
        }

        // Check for spaces
        if (brandNameInput.value.includes(' ')) {
            brandNameError.textContent = 'No spaces allowed';
            submitButton.disabled = true;
            return;
        }

        // Check for numbers
        if (/\d/.test(brandNameInput.value)) {
            brandNameError.textContent = 'No numbers allowed';
            submitButton.disabled = true;
            return;
        }

        // If no errors, enable the button
        submitButton.disabled = false;
    }

    function validateForm() {
        // You can perform additional form-level validation here
        // If no errors, submit the form (you can add an AJAX call here)
        document.getElementById('categoryForm1').submit();
    }
</script>

