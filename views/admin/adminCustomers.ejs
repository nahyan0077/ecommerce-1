        <div class="container " style="box-shadow: 0 0 10px rgba(0, 0, 0, 0.1)">
            <div class="row my-5">
              <table id="example" class="table bg-light table-striped text-center mx-auto">
                <thead class="thead-dark text-center">
                  <tr>
                    <th class="text-center" scope="col">Number</th>
                    <th class="text-center" scope="col">Name</th>
                    <th class="text-center" scope="col">Email</th>
                    <th class="text-center" scope="col">Status</th>
                    <th class="text-center" scope="col">Block/Unblock</th>
                  </tr>
                </thead>
                <tbody>
                    <% customers.forEach((usr,index) => { %>
                     
                    
                  <tr>
                    <th scope="row"><%-index+1-%></th>
                    <td class="text-center"><%-usr.username-%></td>
                    <td class="text-center"><%-usr.email-%></td>
                    <% if (usr.status=="active") { %>
                        <td class="text-center" style="color:green"><%-usr.status-%></td>
                    <% } else { %>
                        <td class="text-center" style="color:red"><%-usr.status-%></td>
                    <% } %>


                    <%if(usr.status=="active"){%>
                        <td class="text-center"><a ><button style="background-color: red; border-radius: 30px; border:none; width:90px; color: white;" onclick="block_unblock('<%-usr._id-%>')">block</button></a></td>
                      <% } else { %>
                        <td class="text-center"><a ><button style="background-color: green; border-radius: 30px; border:none; width:90px; color: white;" onclick="block_unblock('<%-usr._id-%>')">Unblock</button></a></td>
                       <% } %>

                  </tr>

                  <% }) %>

                </tbody>
              </table>
            </div>
          </div>

          <script src="https://cdn.jsdelivr.net/npm/toastify-js"></script>
          <script src="https://cdn.jsdelivr.net/npm/sweetalert2@10"></script>

          <script>
            function confirmLogout() {
                Swal.fire({
                    title: 'Are you sure you want to logout?',
                    icon: 'question',
                    showCancelButton: true,
                    confirmButtonColor: '#3085d6',
                    cancelButtonColor: '#d33',
                    confirmButtonText: 'Yes, logout!',
                }).then((result) => {
                    if (result.isConfirmed) {
                        window.location.href = '/adminlogout';
                    }
                });
            }
        </script>

