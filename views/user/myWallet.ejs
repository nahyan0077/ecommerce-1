    <%- include('./layout/userHeaderNav') %>

    <div class="container" style="margin-top: 100px;">
        <h2 >My Wallet</h2>
    </div>
    
    <div class="wallet-container" >
        
        <div class="balance-container shadow p-3 mb-5  rounded"  style="background-color: #eeeeee;padding: 20px;display: flex;border-radius: 10px;">
            <img src="/images/wallet.png" style="width: 50px;" alt="">
            <div class="balance text-dark" style="margin-left: 20px;">
                <h5>Balance:</h5>
                <span style="font-weight: bold;" >₹ <%= Wallet.wallet %></span>
            </div>
        </div>
        <div class="transaction-header" style=" padding: 10px;">
            <h4 style="color: rgb(0, 0, 0);">History</h4>
        </div>
        <table class="table table-striped mt-3">
            <thead>
                <tr>
                    <th scope="col">Date</th>
                    <th scope="col">Amount</th>
                    <th scope="col">Type</th>
                    <th scope="col">Info</th>
                </tr>
            </thead>
            <tbody>
                <% if (waltHstry) { %>

                    <% waltHstry.refund.forEach((data, index) => { %>
                        <tr class="<%= index % 2 === 0 ? 'table-light text-dark' : 'table-dark text-dark' %>">
                            <td style="font-weight: bold;"><%= data.date.toLocaleString('en-IN', { timeZone: 'Asia/Kolkata', dateStyle: 'short', timeStyle: 'short' }) %></td>
                            <% if (data.type == "debit") { %>
                                <td class="text-danger">-₹ <%= data.amount %></td>
                            <% } else { %>
                                <td class="text-success">+₹ <%= data.amount %></td>
                            <% } %>
                            <td style="font-weight: bold;"><%= data.type.toUpperCase() %></td>
                            <td style="font-style: italic;"><%= data.reason %></td>
                        </tr>
                    <% }) %>
                <% } else { %>
                    <tr>
                        <i>No history found</i>
                    </tr>
                <% } %>
            </tbody>
        </table>
    </div>
    
    


